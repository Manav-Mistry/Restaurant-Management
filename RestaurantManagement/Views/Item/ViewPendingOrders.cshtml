@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@model List<Order>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if(Accessor.HttpContext.Session.GetString("SUserName") != null)
{
    
    <div class="container">

        <table class="table table-striped">

            <thead>
                <tr>
                    <th>OrderId</th>
                    <th>Customer Name</th>
                    <th>OrderType</th>
                    <th>OrderStatus</th>
                    <th>OrderDate</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var order in @Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.CustomerName</td>
                        <td>@order.OrderType</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.OrderDate</td>
                        <td>
                             <form asp-controller="Item" asp-action="changeOrderStatus" method="post">
                                 <input type="hidden" name="orderId" value="@order.OrderId"/>
                                 <input type="submit" name="submit" value="served" />
                             </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else {
    <div class="container" style="text-align: center">
         <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login" style="color: white">Login</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Create" style="color: white">Sign Up</a>
        </li>

    </div>
}